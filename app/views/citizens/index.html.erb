<%- model_class = Citizen -%>
<%= content_for :page_header do %>
  <h3><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h3>
  <%= link_to new_citizen_path, class: 'btn btn-outline-primary btn-lg fw-bold ms-3 fs-6 px-4' do %>
    Cadastrar
  <% end %>
<% end %>

<%= render 'search', url_search: citizens_path %>

<div class="paginateBox <%= 'no-records' if @citizens.count.zero? %>">
  <%= paginate @citizens %>
  <%= page_entries_info @citizens %>
</div>
<div class="table-responsive">
  <table class="table table-striped table-hover table-xs bg-white">
    <thead>
      <tr class="text-uppercase align-middle">
        <th class="text-center"><%= model_class.human_attribute_name(:id) -%></th>
        <th class="text-center"><%= model_class.human_attribute_name(:full_name) %></th>
        <th class="text-center"><%= model_class.human_attribute_name(:document_number) %></th>
        <th class="text-center"><%= model_class.human_attribute_name(:cns) %></th>
        <th class="text-center"><%= model_class.human_attribute_name(:email) %></th>
        <th class="text-center"><%= model_class.human_attribute_name(:status) %></th>
        <th class="text-center"><%= model_class.human_attribute_name(:birth_date) %></th>
        <th class="text-center"><%=t '.actions', default: t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @citizens %>
    </tbody>
  </table>
</div>
<div class="paginateBox <%= 'no-records' if @citizens.count.zero? %>">
  <%= paginate @citizens %>
  <%= page_entries_info @citizens %>
</div>
